{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "author": "Daniel Beck <daniel@beck.win>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "generate": "lerna run generate",
    "format": "lerna run format",
    "preforce-publish": "yarn generate && node set-package-name.js && yarn format",
    "force-publish": "lerna publish -y --no-git-tag-version --force-publish @daisy-chain/components,@daisy-chain/components-react,@daisy-chain/design-tokens/@daisy-chain/components-whitelabel,@daisy-chain/components-react-whitelabel,@daisy-chain/design-tokens-whitelabel",
    "preforce-publish-whitelabel": "WHITELABEL=1 yarn preforce-publish",
    "force-publish-whitelabel": "WHITELABEL=1 lerna publish -y from-package --no-git-tag-version --no-push --force-publish @daisy-chain/components,@daisy-chain/components-react,@daisy-chain/design-tokens/@daisy-chain/components-whitelabel,@daisy-chain/components-react-whitelabel,@daisy-chain/design-tokens-whitelabel",
    "release": "yarn force-publish && yarn force-publish-whitelabel"
  }
}
